@model DefaultWebShop.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div class="container bg-dark text-center rounded">
    <div class="jumbotron bg-warning rounded-circle">
        <form>
            <div class="form-group">
                Name: 
                @Model.Name
            </div>
            <div class="form-group">
                Price: 
                @Model.Price $
            </div>
            <div class="form-group">
                Amount: 
            </div>
            <div class="form-group">
                Image: 
                <img src="~/@Model.ImagePath" alt="No image" class="img-fluid border-dark" height="250" width="250" onclick="EnlargeImage()" />
            </div>
            <a asp-controller="Products" asp-action="Buy" asp-route-id="@Model.ProductID" class="btn btn-primary">Buy product</a>
            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.ProductID" class="btn btn-secondary">Add to shopping cart</a>
        </form>
    </div>
</div>
